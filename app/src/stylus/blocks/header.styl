/* header */
.header
	width 100%
	height 100%
	display flex
	align-items center
	justify-content space-between
	padding 17px 0
	z-index 3
	transition()
	&-logo
		margin-top -7px
	&-items
		width 100%
		height 100%
		display flex
		align-items center
		justify-content space-between
		margin-left 34px
		//+responsive(sm)
		//	justify-content space-around
		//	margin-top 40px
		//	flex-wrap wrap
		//+responsive(xs)
		//	margin-top 12px
		//	justify-content center
		//	flex-direction column
	&-item
		display flex
		align-items center
		//&:nth-child(1)
		//	+responsive(xs)
		//		margin-bottom 15px

	//&-search
	&-myAcc
		height 39px
		margin-left 25px
		//+responsive(sm)
		//	margin-left 5px


.search
	height 39px
	display flex
	align-items center
	justify-content start
	flex-wrap nowrap
	&-item
		height inherit
	&-dropdownButton
		position relative
		height inherit
		color #222222
		font-size 14px
		font-weight 300
		letter-spacing .69px
		background-color moreLightColor
		border-radius 3px 0 0 3px
		border 1px solid lightColor
		padding 9px 9px 11px 12px
		&::after
			color grayColor
			margin-left 4px
			margin-bottom -1px
		&:hover
			color baseColor
	&-form
		height inherit
		justify-content space-around
	&-input
		width 280px
		height inherit
		font-size 13px
		letter-spacing 0.7px
		font-weight 300
		border 1px solid lightColor
		border-radius 0
		border-left 0
		border-right 0
		padding 0 15px
		//+responsive(md)
		//	width 20vw
		//+responsive(sm)
		//	width 25vw
		//+responsive(xs)
		//	width 50vw
	&-button
		width 37px
		height inherit
		font-size 14px
		color grayColor
		background whiteColor
		border-radius 0 3px 3px 0
		border 1px solid lightColor
		&:hover
			background-color accentColor
	&-fa
		margin-left -2px