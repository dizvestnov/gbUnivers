.basket
	position relative
	display flex
	align-items center
	justify-content space-around
	cursor pointer
	transition()
	+responsive(sm)
		justify-content center
	&-item
		width 100%
		height 100%
		+responsive(sm)
			padding 10px
	&-count
		position absolute
		margin auto
		top -5px
		right -7px
		width 20px
		height 20px
		display none
		justify-content center
		align-items center
		font-size .75rem
		color white
		background-color lightcoral
		border-radius 100%
		transition()
	&-img
		//display block
		width 39px
		height 39px
		transition()
	&-dropdown
		min-width 227px
		display none
		position absolute
		top dropdownElementTop
		left -125%
		background-color #fff
		border 1px solid lightgray
		border-radius 5px
		padding 16px
		z-index 10
		transition()
		&::after
			content " "
			position absolute
			top -7px
			left 30%
			font-size 0
			line-height 0
			width 12px
			height 12px
			display block
			background-color white
			border-top 1px solid lightgray
			border-left 1px solid lightgray
			transform rotate(45deg)
	&-good
		transition()
		display flex
		flex-direction column
		align-items center
	&-liveCartTotalPrice
		transition()
		display flex
		justify-content space-between
	&-buttons
		transition()
		display flex
		flex-direction column
	&-link
		transition()
		display flex
		justify-content center
		white-space nowrap
		font-weight 700
		text-transform uppercase
		text-decoration none
		padding .8rem 0
		border 1px solid lightgray
		margin 5px 0
		&:hover
			color lightcoral
			border-color lightcoral


.count
	color inherit
	transition()

.liveCartTotalPrice
	font-weight 700
	border-top 1px solid lightgray
	padding 1rem 0
	margin 0 2px 1rem

.good
	position relative
	list-style none
	padding 0
	margin 0
	&-item
		width 100%
		display flex
		align-items center
		justify-content space-between
		margin 0
		margin-bottom .5rem
	&-info
		margin 0 16px
	&-title
		white-space nowrap
		font-size .85rem
		font-weight 700
		margin-bottom 8px
	&-rating
		display flex
		margin-bottom 4px
	&-order
		display flex
		font-size .9rem
	&-img
		display block
		width 60px
		height 70px

.liveCartOrder
	&-count
	&-math
	&-price
		color lightcoral

.deleteIcon
	position relative
	width 16px
	height 16px
	background-color lightgray
	border-radius 50%
	cursor pointer
	transition()
	&:hover
		background-color lightcoral
	&:after
	&:before
		content ""
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		margin auto
		width 10px
		height 1.5px
		background #fff
	&:after
		transform rotate(45deg)
	&:before
		transform rotate(-45deg)
	&-item
		position absolute
		margin auto
		top 0
		right 0
		bottom 0
		left 0
		width 8px
		height 2px
		background-color #fff
		&:nth-child(1)
			transform rotate(45deg)
		&:nth-child(2)
			transform rotate(-45deg)
