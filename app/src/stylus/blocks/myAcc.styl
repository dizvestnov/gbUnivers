.myAcc
	position relative
	height inherit
	font-size 14px
	font-weight 400
	letter-spacing 1px
	color whiteColor
	background-color accentColor
	border 1px solid lightColor
	border-radius 0
	padding 8px 13px 12px 13px
	cursor pointer
	transition()
	&::after
		color whiteColor
		margin-bottom -1px
	&:hover
		color whiteColor
	&-dropdown
		transition()
		position absolute
		top dropdownElementTop
		left 0
		display none
		background-color white
		border 1px solid lightgray
		border-radius 5px
		padding 10px 20px
		z-index 5
		&::after
			content " "
			position absolute
			top -7px
			left 15%
			font-size 0
			line-height 0
			width 12px
			height 12px
			display block
			background-color white
			border-top 1px solid lightgray
			border-left 1px solid lightgray
			transform rotate(45deg)
	&-item
		display flex
		flex-direction column
	&-link
		transition()
		color grey
		white-space nowrap
		font-size 1rem
		font-weight 500
		text-decoration none
		padding 0
		&:nth-child(2)
			border-bottom 1px solid lightgrey
			padding 7px 0 7px 0
		&:nth-child(3)
			font-size .8rem
			font-weight 300
			padding 7px 0 0 0
		&:hover
			color lightcoral